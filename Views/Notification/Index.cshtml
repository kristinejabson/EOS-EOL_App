@{
    ViewData["Title"] = "Notifications";
    ViewData["CurrentScreen"] = "Notifications";
}

<div class="d-flex mb-4">
    <p class="h3 mb-0 align-middle">
        <a id="back-btn" class="bi h3 bi-arrow-left-short me-2"></a>
        All Notifications
    </p>
</div>

<div class="form-section-medium form-section-shadow justify-content-center m-auto card border-0 p-4">
    <div id="notifications-placeholder">

    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            sendAjaxRequest(
                `${baseUrl}/Notification/NotificationListPartial?isPartial=false`,
                'GET',
                {},
                (data) => {
                    document.getElementById('notifications-placeholder').innerHTML = data
                },
                (data) => {
                    alert(baseUrl)
                }
            );
        });
    </script>
}
